<?xml version="1.0" encoding="UTF-8"?>

<web-app id="hello-world-webapp" version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
	<display-name>servletTestPontini</display-name>
  	<servlet>
		<servlet-name>ResponseServlet</servlet-name>
		<servlet-class>servlets.ResponseServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ResponseServlet</servlet-name>
		<url-pattern>/responseservlet</url-pattern>
	</servlet-mapping>
	<welcome-file-list>  
   		<welcome-file>./jsp/index.jsp</welcome-file>  
  	</welcome-file-list> 
	<resource-ref>
      		<description>Connection pool to the database</description>
      		<res-ref-name>jdbc/animali</res-ref-name>
      		<res-type>javax.sql.DataSource</res-type>
      		<res-auth>Container</res-auth>
  	</resource-ref>
</web-app>
